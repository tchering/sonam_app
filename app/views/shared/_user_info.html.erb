<div class="profile-info bg-light p-3 rounded">
    <div class="d-flex align-items-center mb-3">
        <% # <%= link_to gravatar_for(current_user, size: 50), current_user, class: "mr-3" %>  
         <% # <%= image_tag micropost.display_image, class: "image" if micropost.image.attached? %>  
        <%= image_tag current_user.display_image, size: "80x80", class: "rounded-circle" if current_user.profile_picture.attached? %>
        <h1 class="h4 mb-0"><%= current_user.name %></h1>
    </div>
    <div class="d-flex justify-content-between">
        <span class=""><%= link_to "View my profile", current_user, class: "text-decoration-none text-primary" %></span>
        <span class="text-muted"><%= pluralize(current_user.microposts.count, "micropost") %></span>
    </div>
</div>