<% provide(:title, @title) %>
<div class="row">
    <aside class="col-md-4">
        <section class="user_info">
           <%= render "shared/user_info" %>
           <%= render "shared/stats" %>

        </section>
        <section class="stats">
            <% if @users.any? %>
                <div class="user_avatars m-3">
                    <% @users.each do |user| %>
                        <%= link_to gravatar_for(user, size: 30), user %>
                    <% end %>
                </div>
            <% end %>
        </section>
    </aside>
    <div class="col-md-8">
        <h3><%= @title %></h3>
        <% if @users.any? %>
            <ul class="list-group">
                <% @users.each do |user| %>
                    <li class="list-group-item list_shadow">
                        <%= link_to user do %>
                            <%= gravatar_for user, size: 50 %>
                            <%= user.name %>
                        <% end %>
                    </li>
                <% end %>
            </ul>
            <%= will_paginate %>
        <% end %>
    </div>
</div>