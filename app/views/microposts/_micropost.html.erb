<li id="micropost-<%= micropost.id %>" class="microposts">
    <div class="d-flex justify-content-between">
        <div class="list_shadow w-100 rounded-3">
            <%= link_to gravatar_for(micropost.user, size: 50), micropost.user %>
           
            <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
            <span class="content"><%= micropost.content + "." %></span>
        
            <% # .image is calling the image method on the micropost instance. This method was defined by the has_one_attached :image line in Micropost model. %>
            <% # image_tag micropost.image if micropost.image.attached? %> 
            <% # This above line is replaced by the below line to display the resize image in the feed because we have created method in micropost model display_image %>
            <%= image_tag micropost.display_image, class: "image" if micropost.image.attached? %>
            <span class="timestamp">
                Posted <%= time_ago_in_words(micropost.created_at) %> ago
            </span>
        </div>
        <div>
            <% if current_user.admin? || current_user == micropost.user %>
                <%= link_to micropost_path(micropost), method: :delete,
                                                       data: { turbo_action: "replace", turbo_method: "delete", turbo_confirm: "Are you sure?" } do %>
                    <%= fa_icon "trash" %> 
                <% end %>
            <% end %>
        </div>
    </div>
</li>
